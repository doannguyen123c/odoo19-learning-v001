<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_combo_wizard_form" model="ir.ui.view">
        <field name="name">sale.combo.wizard.form</field>
        <field name="model">sale.combo.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Combo Components">
                <group>
                    <field name="sale_order_line_id" options="{'no_open': True}"/>
                </group>
                <field name="line_ids">
                    <list editable="bottom">
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="uom_id" groups="uom.group_uom"/>
                    </list>
                </field>
                <footer>
                    <button string="Add Components" type="object" name="action_add_components" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_combo_wizard" model="ir.actions.act_window">
        <field name="name">Add Combo Components</field>
        <field name="res_model">sale.combo.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
