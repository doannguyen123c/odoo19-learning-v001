<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- CATEGORY: Notification Board -->
        <record model="ir.module.category" id="module_category_notification_board">
            <field name="name">Notification Board</field>
            <field name="description">Access levels for the Notification Board app</field>
            <field name="sequence">10</field>
        </record>

        <!-- GROUP: User (Read Only) -->
        <record id="group_notification_user" model="res.groups">
            <field name="name">User (Read Only)</field>

            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- GROUP: Manager (Create/Edit) -->
        <record id="group_notification_admin" model="res.groups">
            <field name="name">Administrator</field>

            <!-- Admin implies User rights, plus Admin rights -->
            <field name="implied_ids" eval="[(4, ref('group_notification_user'))]"/>

        </record>
    </data>
</odoo>